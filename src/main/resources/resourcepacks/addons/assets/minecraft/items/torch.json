{
  "model": {
    "type": "minecraft:select",
    "property": "minecraft:display_context",
    "cases": [
      {
        "when": [
          "firstperson_righthand"
        ],
        "model": {
          "type": "minecraft:model",
          "model": "minecraft:item/torches/torch_right"
        }
      },
      {
        "when": [
          "firstperson_lefthand"
        ],
        "model": {
          "type": "minecraft:model",
          "model": "minecraft:item/torches/torch_left"
        }
      },
      {
        "when": [
          "thirdperson_righthand",
          "thirdperson_lefthand"
        ],
        "model": {
          "type": "minecraft:model",
          "model": "minecraft:item/torches/torch_hand"
        }
      }
    ],
    "fallback": {
      "type": "minecraft:model",
      "model": "minecraft:block/torches/torch"
    }
  }
}